<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://xamarin.com/schemas/2014/forms"
     xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
     x:Class="TestApp.Themes.Fonts">


    <OnPlatform x:Key="RobotoRegular" x:TypeArguments="x:String">
        <On Platform="iOS" Value="Roboto-Regular" />
        <On Platform="Android" Value="Roboto-Regular.ttf#Roboto" />
        <On Platform="UWP, WinRT, WinPhone" Value="Assets/Fonts/Roboto-Regular.ttf#Roboto" />
    </OnPlatform>

    <OnPlatform x:Key="RobotoBold" x:TypeArguments="x:String">
        <On Platform="iOS" Value="Roboto-Bold" />
        <On Platform="Android" Value="Roboto-Bold.ttf#Roboto" />
        <On Platform="UWP, WinRT, WinPhone" Value="Assets/Fonts/Roboto-Bold.ttf#Roboto" />
    </OnPlatform>


</ResourceDictionary>    